<?xml version='1.0' encoding='utf-8'?>
<widget id="com.gpatruno.TopRocketCar" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>TopRocketCar</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <icon src="www/img/logo.png" />
    <preference name="SplashScreenDelay" value="4000" /> 
    <preference name="SplashScreenBackgroundColor" value="0xFFFFFFFF" />
    <platform name="android">
        <preference name="StatusBarBackgroundColor" value="#008BDD" />
        <allow-intent href="market:*" />
        <splash src="www/img/res/mipmap-hdpi/ic_launcher.png" density="hdpi" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <platform name="browser">
        <preference name="SplashScreen" value="www/img/res/mipmap-hdpi/ic_launcher.png" />
    </platform>
</widget>